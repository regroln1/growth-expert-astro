---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Ressources Gratuites - Growth Expert"
  description="Téléchargez nos guides et outils gratuits pour votre PME"
>
  <Header />
  <main class="pt-20">
    <section class="py-20 lg:py-32">
      <div class="container mx-auto px-6 text-center">
        <h1 class="text-4xl lg:text-5xl font-bold text-navy-900 mb-8 font-crimson">
          Ressources Gratuites
        </h1>
        <div class="glass p-8 rounded-3xl max-w-2xl mx-auto">
          <p class="text-lg text-gray-700">
            Guides, templates et outils pour accélérer votre croissance.
          </p>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
EOF