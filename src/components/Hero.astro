<section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
  <!-- Background Navy Dark -->
  <div class="absolute inset-0 bg-navy-dark"></div>
  
  <!-- Animated Background Elements -->
  <div class="absolute inset-0">
    <div class="absolute top-20 left-10 w-72 h-72 bg-blue-500/10 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-20 right-10 w-96 h-96 bg-purple-500/10 rounded-full blur-3xl animate-float" style="animation-delay: 2s;"></div>
  </div>

  <div class="relative z-10 container mx-auto px-6">
    <div class="flex items-center justify-center">
      <!-- Content centré, sans grid -->
      <div class="text-white text-center max-w-4xl">
        <h1 class="text-4xl lg:text-6xl font-bold mb-6 animate-fade-in">
          <span class="font-crimson">Libérez le Potentiel</span>
          <br />
          <span class="font-crimson">de Votre PME avec la</span>
          <br />
          <span class="text-gradient-gold">Méthode AIA™</span>
        </h1>

        <p class="text-xl lg:text-2xl text-gray-300 mb-8 leading-relaxed animate-fade-in font-crimson" style="animation-delay: 0.2s;">
          Alignez votre offre, attirez des clients qualifiés et automatisez votre croissance — en moins de 90 jours.
        </p>

        <div class="animate-fade-in" style="animation-delay: 0.4s;">
          <a
            href="#contact"
            class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-gold-500 to-gold-600 text-navy-900 font-semibold rounded-full hover:shadow-2xl hover-lift transition-all duration-300"
          >
            Réservez votre Session Stratégique
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>