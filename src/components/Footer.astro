---
const currentYear = new Date().getFullYear();

const footerLinks = {
  legal: [
    { name: 'Mentions légales', href: '/mentions-legales' },
    { name: 'CGV', href: '/cgv' },
    { name: 'Politique de confidentialité', href: '/politique-confidentialite' }
  ],
  navigation: [
    { name: 'Contact', href: '#contact' },
    { name: 'Blog', href: '/blog' },
    { name: 'Espace client', href: '/espace-client' }
  ]
};
---

<footer class="relative bg-gradient-navy text-white overflow-hidden">
  <!-- Decorative Elements -->
  <div class="absolute top-0 left-10 w-64 h-64 bg-blue-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 right-10 w-80 h-80 bg-purple-500/10 rounded-full blur-3xl"></div>

  <div class="relative z-10 container mx-auto px-6 py-16">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Brand -->
      <div class="lg:col-span-2">
        <h3 class="text-2xl font-bold text-gradient-gold mb-4">
          Growth Expert
        </h3>
        <p class="text-gray-300 font-crimson mb-6 max-w-md leading-relaxed">
          Libérez le potentiel de votre PME avec la Méthode AIA™. 
          Alignez votre offre, attirez des clients qualifiés et automatisez votre croissance.
        </p>
        
        <!-- Contact Info -->
        <div class="space-y-3">
          <div class="flex items-center text-gray-300">
            <svg class="w-4 h-4 mr-3 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span class="font-crimson">contact@growth-expert.fr</span>
          </div>
          <div class="flex items-center text-gray-300">
            <svg class="w-4 h-4 mr-3 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span class="font-crimson">+33 1 23 45 67 89</span>
          </div>
          <div class="flex items-center text-gray-300">
            <svg class="w-4 h-4 mr-3 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="font-crimson">Paris, France</span>
          </div>
        </div>
      </div>

      <!-- Navigation Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4 text-gold-400 font-crimson">Navigation</h4>
        <ul class="space-y-2">
          {footerLinks.navigation.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-300 hover:text-gold-400 transition-colors duration-200 font-crimson"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal Links -->
      <div>
        <h4 class="text-lg font-semibold mb-4 text-gold-400 font-crimson">Légal</h4>
        <ul class="space-y-2">
          {footerLinks.legal.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-300 hover:text-gold-400 transition-colors duration-200 font-crimson"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 font-crimson text-sm">
          © {currentYear} Growth Expert. Tous droits réservés.
        </p>
        
        <div class="mt-4 md:mt-0">
          <p class="text-gray-400 font-crimson text-sm">
            Fait avec ❤️ pour les dirigeants ambitieux
          </p>
        </div>
      </div>
    </div>
  </div>
</footer>