---
const contactInfo = [
  {
    title: "Téléphone",
    content: "+33 1 23 45 67 89",
    link: "tel:+33123456789"
  },
  {
    title: "Email",
    content: "contact@growthexpert.fr",
    link: "mailto:contact@growthexpert.fr"
  },
  {
    title: "Localisation",
    content: "Paris, France",
    link: null
  },
  {
    title: "Disponibilité",
    content: "Lun - Ven, 9h - 18h",
    link: null
  }
];

const benefits = [
  "Consultation gratuite de 30 minutes",
  "Approche personnalisée et sur-mesure",
  "Résultats mesurables et garantis",
  "Accompagnement continu et flexible"
];
---

<section id="contact" class="py-20 lg:py-32 relative overflow-hidden">
  <!-- Sophisticated dark gradient background -->
  <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-slate-900 to-black"></div>
  
  <!-- Enhanced floating elements for depth -->
  <div class="absolute top-20 left-10 w-64 h-64 bg-blue-500/6 rounded-full blur-3xl float-slow"></div>
  <div class="absolute bottom-20 right-10 w-80 h-80 bg-purple-500/8 rounded-full blur-3xl float-medium"></div>
  <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-48 h-48 bg-teal-500/5 rounded-full blur-2xl float-fast"></div>

  <div class="relative z-10 container mx-auto px-6">
    <!-- Premium glassmorphism section header -->
    <div class="text-center mb-16">
      <div class="premium-glass-card p-12 rounded-3xl">
        <div class="inline-flex items-center px-4 py-2 glass-badge rounded-full mb-6">
          <svg class="w-4 h-4 mr-2 text-gold-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
          </svg>
          <span class="text-sm font-medium text-gold-400">Contact</span>
        </div>
        
        <h2 class="text-4xl lg:text-6xl font-bold text-white mb-6 font-crimson">
          Transformons ensemble
          <span class="text-gradient-gold block">votre vision en réalité</span>
        </h2>
        
        <p class="text-xl text-gray-300 max-w-3xl mx-auto font-crimson">
          Prenez rendez-vous pour une consultation gratuite et découvrons comment 
          accélérer la croissance de votre entreprise.
        </p>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
      <!-- Premium glassmorphism contact form -->
      <div class="glass-card-premium p-8 lg:p-12 rounded-3xl hover:glass-card-hover transition-all duration-500">
        <h3 class="text-2xl font-bold text-white mb-6">
          Démarrons la conversation
        </h3>

        <form id="contact-form" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-300 mb-2">
                Nom complet *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 glass-input rounded-xl focus:glass-input-focus transition-all duration-200 text-white placeholder-gray-400"
                placeholder="Votre nom"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-300 mb-2">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 glass-input rounded-xl focus:glass-input-focus transition-all duration-200 text-white placeholder-gray-400"
                placeholder="votre@email.com"
              />
            </div>
          </div>

          <div>
            <label for="company" class="block text-sm font-medium text-gray-300 mb-2">
              Entreprise
            </label>
            <input
              type="text"
              id="company"
              name="company"
              class="w-full px-4 py-3 glass-input rounded-xl focus:glass-input-focus transition-all duration-200 text-white placeholder-gray-400"
              placeholder="Nom de votre entreprise"
            />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-300 mb-2">
              Message *
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="6"
              class="w-full px-4 py-3 glass-input rounded-xl focus:glass-input-focus transition-all duration-200 resize-none text-white placeholder-gray-400"
              placeholder="Parlez-moi de vos défis et objectifs..."
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full inline-flex items-center justify-center px-8 py-4 glass-cta-primary text-white font-semibold rounded-xl hover:glass-cta-primary-hover transition-all duration-300"
          >
            Envoyer le message
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
          </button>
        </form>
      </div>

      <!-- Premium glassmorphism contact info -->
      <div class="space-y-8">
        <div class="glass-card-premium p-8 rounded-3xl hover:glass-card-hover transition-all duration-500">
          <h3 class="text-2xl font-bold text-white mb-6">
            Informations de contact
          </h3>

          <div class="space-y-6">
            {contactInfo.map((info, index) => (
              <div class="flex items-start">
                <div class={`w-12 h-12 rounded-xl flex items-center justify-center mr-4 flex-shrink-0 ${
                  index === 0 ? 'glass-icon-gold' : 
                  index === 1 ? 'glass-icon-blue' : 
                  index === 2 ? 'glass-icon-purple' : 'glass-icon-teal'
                }`}>
                  {index === 0 && (
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  )}
                  {index === 1 && (
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  )}
                  {index === 2 && (
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  )}
                  {index === 3 && (
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  )}
                </div>
                <div>
                  <h4 class="font-semibold text-white mb-1">{info.title}</h4>
                  {info.link ? (
                    <a
                      href={info.link}
                      class="text-gray-300 hover:text-gold-400 transition-colors"
                    >
                      {info.content}
                    </a>
                  ) : (
                    <p class="text-gray-300">{info.content}</p>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Premium glassmorphism benefits -->
        <div class="glass-card-premium p-8 rounded-3xl hover:glass-card-hover transition-all duration-500">
          <h3 class="text-2xl font-bold text-white mb-6">
            Pourquoi me choisir ?
          </h3>

          <div class="space-y-4">
            {benefits.map((benefit) => (
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-400 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span class="text-gray-300">{benefit}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Simple form handling
        const formData = new FormData(this);
        const data = Object.fromEntries(formData);
        
        // Simulate sending
        const button = this.querySelector('button[type="submit"]') as HTMLButtonElement;
        if (button) {
          const originalText = button.innerHTML;
          
          button.innerHTML = `
            <div class="w-5 h-5 border-2 border-white/30 border-t-white rounded-full animate-spin mr-2"></div>
            Envoi en cours...
          `;
          button.disabled = true;
          
          setTimeout(() => {
            alert('Message envoyé ! Je vous recontacterai dans les 24h. Merci pour votre intérêt !');
            form.reset();
            button.innerHTML = originalText;
            button.disabled = false;
          }, 1000);
        }
      });
    }
  });
</script>

<style>
  /* Premium Glassmorphism Effects */
  .premium-glass-card {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(20px) saturate(180%);
    -webkit-backdrop-filter: blur(20px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.15);
    box-shadow: 
      0 8px 32px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.2),
      inset 0 -1px 0 rgba(0, 0, 0, 0.1);
  }

  .glass-card-premium {
    background: rgba(255, 255, 255, 0.06);
    backdrop-filter: blur(16px) saturate(150%);
    -webkit-backdrop-filter: blur(16px) saturate(150%);
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 
      0 6px 24px rgba(0, 0, 0, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.15);
  }

  .glass-card-hover:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    box-shadow: 
      0 12px 36px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.25);
    transform: translateY(-8px);
  }

  .glass-badge {
    background: rgba(251, 191, 36, 0.1);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(251, 191, 36, 0.2);
  }

  .glass-input {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .glass-input-focus:focus {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(251, 191, 36, 0.5);
    outline: none;
    box-shadow: 
      0 0 0 3px rgba(251, 191, 36, 0.1),
      inset 0 1px 0 rgba(255, 255, 255, 0.1);
  }

  .glass-icon-gold {
    background: rgba(251, 191, 36, 0.15);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(251, 191, 36, 0.3);
  }

  .glass-icon-blue {
    background: rgba(59, 130, 246, 0.15);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(59, 130, 246, 0.3);
  }

  .glass-icon-purple {
    background: rgba(147, 51, 234, 0.15);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(147, 51, 234, 0.3);
  }

  .glass-icon-teal {
    background: rgba(20, 184, 166, 0.15);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(20, 184, 166, 0.3);
  }

  .glass-cta-primary {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(147, 51, 234, 0.2));
    backdrop-filter: blur(16px) saturate(180%);
    -webkit-backdrop-filter: blur(16px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.25);
    box-shadow: 
      0 8px 32px rgba(59, 130, 246, 0.2),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
  }

  .glass-cta-primary-hover:hover {
    background: linear-gradient(135deg, rgba(59, 130, 246, 0.3), rgba(147, 51, 234, 0.3));
    border-color: rgba(255, 255, 255, 0.35);
    box-shadow: 
      0 12px 40px rgba(59, 130, 246, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.3);
    transform: translateY(-2px);
  }
</style>