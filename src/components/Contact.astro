    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
      <!-- Enhanced contact form -->
      <div class="glass-strong p-8 lg:p-12 rounded-3xl hover-lift transition-all duration-500 animate-slide-left" style="animation-delay: 0.3s;">
