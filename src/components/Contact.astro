          formUrl="https://your-suitedash-url.com/frm/contact"
          height="600px"
          trustText="üîí Vos informations sont s√©curis√©es et ne seront jamais partag√©es."
          loadingText="Chargement du formulaire de contact..."
          containerClass="bg-transparent"
        />
      </div>

      <!-- Enhanced contact info -->
      <div class="space-y-8 animate-slide-right" style="animation-delay: 0.5s;">
        <div class="glass-strong p-8 rounded-3xl hover-lift transition-all duration-500">
          <h3 class="text-2xl font-bold text-white mb-6">
            Informations de contact
          </h3>

          <div class="space-y-6">
            {contactInfo.map((info, index) => (
              <div class="flex items-start">
                <div class={`w-12 h-12 rounded-xl flex items-center justify-center mr-4 flex-shrink-0 ${
                  index === 0 ? 'bg-gradient-to-r from-gold-500 to-gold-600' : 
                  index === 1 ? 'bg-gradient-to-r from-blue-500 to-blue-600' : 
                  index === 2 ? 'bg-gradient-to-r from-purple-500 to-purple-600' : 'bg-gradient-to-r from-teal-500 to-teal-600'
                }`}>
                  {index === 0 && (
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  )}
